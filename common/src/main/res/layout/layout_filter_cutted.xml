<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_types"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_1x"
        android:layout_marginTop="@dimen/spacing_1x"
        android:text="@string/map_screen_type"
        android:textAppearance="@style/TextAppearance.YFC.Subheading1"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/button_types_all"
        style="@style/Widget.YFC.TextView.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_0.4x"
        android:layout_marginTop="@dimen/spacing_1x"
        android:layout_marginEnd="@dimen/spacing_1x"
        android:text="@string/see_full_list"
        android:textAppearance="@style/TextAppearance.YFC.Subheading7"
        app:layout_constraintStart_toEndOf="@id/text_types"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/group_types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/spacing_1x"
        android:paddingTop="@dimen/spacing_0.75x"
        android:paddingBottom="@dimen/spacing_1x"
        app:chipSpacingVertical="@dimen/spacing_0.5x"
        app:layout_constraintTop_toBottomOf="@id/text_types" />

</androidx.constraintlayout.widget.ConstraintLayout>