<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_left_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/gray_light"
        app:layout_constraintBottom_toBottomOf="@id/text_header_date"
        app:layout_constraintEnd_toStartOf="@id/text_header_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_header_date" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_header_date"
        style="@style/Widget.YFC.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_0.75x"
        android:layout_marginTop="@dimen/spacing_0.75x"
        android:layout_marginEnd="@dimen/spacing_0.75x"
        android:textAppearance="@style/TextAppearance.YFC.Subheading6"
        app:layout_constraintEnd_toStartOf="@id/view_right_line"
        app:layout_constraintStart_toEndOf="@id/view_left_line"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="December 22, 2002" />

    <View
        android:id="@+id/view_right_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/gray_light"
        app:layout_constraintBottom_toBottomOf="@id/text_header_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_header_date"
        app:layout_constraintTop_toTopOf="@id/text_header_date" />

</androidx.constraintlayout.widget.ConstraintLayout>