<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/spacing_1x"
    android:paddingTop="@dimen/spacing_0.4x"
    android:paddingEnd="@dimen/spacing_1x">

    <View
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@drawable/view_round_gray_stroke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_aed_amount"
        style="@style/Widget.YFC.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_0.75x"
        android:layout_marginEnd="@dimen/spacing_0.75x"
        android:textAppearance="@style/TextAppearance.YFC.Subheading2"
        app:layout_constraintEnd_toEndOf="@id/view_background"
        app:layout_constraintTop_toTopOf="@id/view_background"
        tool:text="AED 13145" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_date"
        style="@style/Widget.YFC.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_0.75x"
        android:layout_marginBottom="@dimen/spacing_0.75x"
        android:textAppearance="@style/TextAppearance.YFC.Subheading2"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="@id/view_background"
        app:layout_constraintStart_toStartOf="@id/view_background"
        tool:text="12/12/1121" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_type"
        style="@style/Widget.YFC.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_0.5x"
        android:layout_marginTop="@dimen/spacing_0.75x"
        android:drawablePadding="@dimen/spacing_0.4x"
        android:textAppearance="@style/TextAppearance.YFC.Subheading2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_background"
        tool:text="100 credits" />

</androidx.constraintlayout.widget.ConstraintLayout>