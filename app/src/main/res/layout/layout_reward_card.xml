<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_reward_card"
    android:layout_width="327dp"
    android:layout_height="205dp"
    android:layout_marginBottom="@dimen/spacing_1.5x"
    android:background="@drawable/background_coin_reward_card">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_prize_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_1x"
        android:layout_marginTop="@dimen/spacing_1.25x"
        android:gravity="center_horizontal"
        android:text="@string/coin_reward_your_prize"
        android:textAppearance="@style/TextAppearance.YFC.Heading2"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_1x"
        android:layout_marginTop="@dimen/spacing_0.5x"
        android:drawablePadding="@dimen/spacing_0.25x"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.YFC.Heading1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/button_great"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_prize_label"
        app:layout_constraintVertical_bias="0"
        tools:text="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_great"
        style="@style/Widget.YFC.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_1.5x"
        android:layout_marginBottom="@dimen/spacing_1.5x"
        android:background="@drawable/button_background_white"
        android:text="@string/coin_reward_great"
        android:textColor="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
