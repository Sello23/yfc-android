<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dubai_appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_dubai"
    android:orientation="vertical">

    <include
        android:id="@+id/view_dubai_info"
        layout="@layout/view_dubai_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginStart="@dimen/spacing_1x"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/spacing_1x">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/track_progress"
            style="@style/Widget.YFC.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_0.5x"
            android:background="@drawable/button_background_border_white"
            android:text="@string/track_progress"
            android:textAppearance="@style/TextAppearance.YFC.Button2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/join_challenge"
            style="@style/Widget.YFC.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="@string/join_challenges"
            android:textAppearance="@style/TextAppearance.YFC.Subheading1" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>