<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_background_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_1x" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.YFC.ImageView.Avatar"
        tools:srcCompat="@drawable/gradient_blue" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_0.75x" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/spacing_2x"
        android:textAppearance="@style/TextAppearance.YFC.Heading3"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ronald Richards, 27" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_0.75x" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/spacing_2x"
        android:textAppearance="@style/TextAppearance.YFC.Subheading7"
        android:textColor="@color/text_gray"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="emailaddress@email.com" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_0.25x" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/spacing_2x"
        android:textAppearance="@style/TextAppearance.YFC.Subheading1"
        android:textColor="@color/main_active"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="+971 4 333 6578" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_1x" />

    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_separator" />

    <include
        android:id="@+id/schedule_info"
        layout="@layout/item_scheduled_time" />

    <include
        android:id="@+id/sessions_available"
        layout="@layout/item_amount_info" />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_separator" />

    <View
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_0.5x" />

    <include
        android:id="@+id/facility_info"
        layout="@layout/item_facility_cell_small"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <include
        android:id="@+id/sessions_conducted"
        layout="@layout/item_amount_info" />

    <View
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_0.5x" />

</androidx.appcompat.widget.LinearLayoutCompat>