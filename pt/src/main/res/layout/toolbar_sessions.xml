<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    style="@style/Widget.YFC.Toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_toolbar_bottom_sheet"
    app:menu="@menu/bottom_sheet"
    app:navigationIconTint="@color/grey">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/pt_success_payment_title"
            android:textAppearance="@style/TextAppearance.YFC.Heading2"
            android:textColor="@color/black" />

        <include
            android:id="@+id/sessions"
            layout="@layout/view_sessions" />

    </LinearLayout>

</com.google.android.material.appbar.MaterialToolbar>